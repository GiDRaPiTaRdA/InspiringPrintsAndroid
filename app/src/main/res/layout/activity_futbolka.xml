<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="max.inspiringprints.T_Shirts"
    android:background="@drawable/t_shirt"
    android:longClickable="false"
    android:padding="7dp"
    android:clickable="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Футболки"
                android:id="@+id/textView"
                android:layout_weight="0.8" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Info"
                android:id="@+id/info"
                android:layout_weight="0.2"
                style="@android:style/Widget.DeviceDefault.Button"
                android:onClick="Info6" />

        </LinearLayout>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Цвет футболки"
                android:id="@+id/textView2"
                android:layout_weight="0.2" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Белый"
                android:id="@+id/radioButton"
                android:onClick="Radio_button"
                android:layout_weight="0.1" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/radioButton1"
                android:onClick="Radio_button1"
                android:text="Черный"
                android:layout_weight="0.1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Тип"
                android:id="@+id/textView3"
                android:layout_weight="0.2" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Мужская"
                android:id="@+id/radioButton2"
                android:onClick="Radio_button2"
                android:layout_weight="0.1" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Женская"
                android:id="@+id/radioButton3"
                android:checked="false"
                android:onClick="Radio_button3"
                android:layout_weight="0.1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Размер принта"
                android:id="@+id/textView5"
                android:password="false"
                android:layout_weight="0.2" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="А4"
                android:id="@+id/radioButton4"
                android:checked="false"
                android:onClick="Radio_button4"
                android:layout_weight="0.1" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="А3"
                android:id="@+id/radioButton5"
                android:onClick="Radio_button5"
                android:layout_weight="0.1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Обработка изображения"
                android:id="@+id/textView4" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Подготовка к печати"
                android:id="@+id/checkBox1"
                android:singleLine="false" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:gravity="left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Сумма:"
                android:id="@+id/sum_out"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="right"
            android:layout_weight="0.15">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Посчитать"
                android:id="@+id/button"
                android:onClick="Count"
                android:enabled="false" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Отправить заказ"
                android:id="@+id/button2"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:onClick="SendOrder"
                android:enabled="false" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
